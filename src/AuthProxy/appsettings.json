{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Yarp": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AuthProxy": {
    "Backend": {
      "Url": "<fully qualified URL to the backend application>"
    },
    "Authentication": {
      "Cookie": {
        "Name": ".AuthProxy"
      },
      "TokenIssuer": {
        "Audience": "MyAudience",
        "Issuer": "AuthProxy",
        "Expiration": "01:00:00",
        "SigningSecret": "<signing secret>"
      },
      "IdentityProviders": [
        {
          "Name": "<name>",
          "Type": "OpenIdConnect",
          "Authority": "<authority>",
          "ClientId": "<client id>",
          "ClientSecret": "<client secret>",
          "AllowedAudiences": [
            "<audience>"
          ]
        }
      ]
    }
  }
}