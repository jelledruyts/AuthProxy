{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Yarp": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AuthProxy": {
    "Backend": {
      "Url": "<fully qualified URL to the backend application>"
    },
    "Authentication": {
      "Cookie": {
        "Name": ".AuthProxy"
      },
      "IdentityProvider": {
        "Type": "OpenIdConnect",
        "Authority": "<authority>",
        "ClientId": "<client id>",
        "ClientSecret": "<client secret>",
        "Audience": "<audience>",
        "CallbackPath": "/.auth/login/callback"
      }
    }
  }
}