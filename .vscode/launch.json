{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AuthProxy",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/AuthProxy/bin/Debug/net6.0/AuthProxy.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/AuthProxy",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch TestWebApp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/TestWebApp/bin/Debug/net6.0/TestWebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/TestWebApp",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                "Launch AuthProxy",
                "Launch TestWebApp"
            ],
            "preLaunchTask": "build",
            "stopAll": true
        }
    ]
}